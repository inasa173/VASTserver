<div class="row">
  <div class="col-xs-6">
    <%= form_for(campaign) do |f| %>
      <% if campaign.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% campaign.errors.full_messages.each do |campaign| %>
              <li><%= campaign %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, 'name' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :start_at, 'start_at' %>
        <%= f.datetime_field :start_at, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= f.label :end_at, 'end_at' %>
        <%= f.datetime_field :end_at, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :limit_start, 'limit_start' %>
        <%= f.text_field :limit_start, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :movie_url, 'movie_url' %>
        <%= f.url_field :movie_url, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :cuepints %><br />
        <%= collection_check_boxes(:campaign, :cuepoint_ids, Cuepoint.all, :id, :name) do |b| %>
          <%= b.label { b.check_box + b.text } %>
        <% end %>
      </div>

      <%= f.submit '投稿', class: 'btn btn-primary' %>
      <%= link_to (button_tag "中止", type: 'button', class: 'btn btn-warning'), root_path %>
      <%= link_to (button_tag "削除", type: 'button', class: 'btn btn-danger'), @campaign, method: :delete, data: {confirm: '本当に削除しますか？'} %>
    <% end %>
  </div>
</div>
