<h1>キャンペーン一覧</h1>
<%= link_to '登録', new_campaign_path, class: "btn btn-primary" %>
  
<% if @campaigns.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>name</th></th>
        <th>start_at</th>
        <th>end_at</th>
        <th>limit_start</th>
        <th>movie_url</th>
      </tr>
    </thead>
    <tbody>
      <% @campaigns.each do |campaign| %>
        <tr>
          <td><%= link_to campaign.id, edit_campaign_path(campaign) %></td>
          <td><%= campaign.name %></td>
          <td><%= campaign.start_at %></td>
          <td><%= campaign.end_at %></td>
          <td><%= campaign.limit_start %></td>
          <td><%= campaign.movie_url %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @campaigns %>
  </div>
<% end %>


