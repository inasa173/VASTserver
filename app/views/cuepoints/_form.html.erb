<div class="row">
  <div class="col-xs-6">
    <%= form_for(cuepoint) do |f| %>
      <% if cuepoint.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% cuepoint.errors.full_messages.each do |cuepoint| %>
              <li><%= cuepoint %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, 'name' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :url, 'VAST URL' %><p>
           <%= link_to vast_url(@cuepoint), vast_url(@cuepoint), target: '_blank' %>
        </p>
      </div>

      <%= f.submit '保存', class: 'btn btn-primary' %>
      <%= link_to (button_tag "中止", type: 'button', class: 'btn btn-warning'), cuepoints_path %>
<%= link_to (button_tag "削除", type: 'button', class: 'btn btn-danger'), @cuepoint, method: :delete, data: {confirm: '本当に削除しますか？'} %>

    <% end %>
  </div>
</div>
