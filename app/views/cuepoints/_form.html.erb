<div class="row">
  <div class="col-xs-6">
    <%= form_for(cuepoint) do |f| %>
      <% if cuepoint.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% cuepoint.errors.full_messages.each do |cuepoint| %>
              <li><%= cuepoint %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, 'name' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <%= f.submit '投稿', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
